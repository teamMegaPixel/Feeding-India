<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/sienna"
                android:text="Donation"/>
            <TextView
                android:id="@+id/donation_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/solidBlue"
                />
            <ImageView
                android:id="@+id/donation_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@color/solidBlue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATUS"
                android:textSize="18sp"
                android:textColor="@color/sienna"/>
            <TextView
                android:id="@+id/donation_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/solidBlue"/>
            <ImageView
                android:id="@+id/hunger_spot_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@color/solidBlue"
                />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>